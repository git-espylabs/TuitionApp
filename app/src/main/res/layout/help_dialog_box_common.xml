<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/help_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="16dp"
            android:text="Ask a doubt"
            android:textColor="@color/black_text"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_close" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/helpboxLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:background="@drawable/rect_bg_gray_border"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:hint="Subject"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/qury_clr"
            android:textSize="14dp"
            android:id="@+id/edt_sbjt"
            android:layout_width="match_parent"
            android:layout_height="41dp"/>

        <EditText
            android:id="@+id/edt_queries"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/rect_bg_gray_border"
            android:gravity="left|top"
            android:hint="Ask your queries"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingTop="16dp"

            android:paddingBottom="3dp"
            android:textColor="@color/qury_clr"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:id="@+id/camlay"
            android:background="@color/border_color1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="96dp"
            android:layout_height="96dp">

            <RelativeLayout
                android:background="@drawable/dotted_rect"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/capture"
                    android:src="@drawable/ic_camera"
                    android:padding="4dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/img"
                    android:layout_below="@+id/capture"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Attach Image"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/userImg"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:layout_centerInParent="true" />


            </RelativeLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/btnquery_smt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/rect_bg_gradient_button"
            android:gravity="center"
            android:padding="9dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"/>


    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
