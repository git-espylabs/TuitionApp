    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/arch_profile" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/back_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            app:srcCompat="@drawable/ic_back_arrow"
            app:tint="@color/colorWhite" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileve"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
            app:srcCompat="@mipmap/ic_launcher" />
    </FrameLayout>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/profile_user_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="jasmine wallence"
            android:textColor="@color/tab_txt_clr"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/profile_standard_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(studied on 4th standard)"
            android:textColor="@color/tab_txt_clr"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="normal" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profile_email_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.5"
            android:text="jasminewallence@gmail.com"
            android:textColor="@color/tab_txt_clr"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="normal" />
            <TextView
                android:id="@+id/profile_dot_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="."
                android:layout_weight=".1"
                android:layout_marginLeft="16dp"
                android:textColor="@color/tab_txt_clr"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/profile_mobileno_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1.4"
                android:text="1234568790"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/tab_txt_clr"
                android:textSize="14sp"
                android:textStyle="normal" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider_clr"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    ///profile menus

    <LinearLayout
        android:id="@+id/edt_profile_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_imv"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_menu_edit_profile"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/edtprofilr_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/chapter_clr"
                    android:text="Edit Profile" />




            </LinearLayout>
            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_arrow_right_24"
                android:scaleType="fitCenter"
                app:tint="@color/qury_clr" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:background="@color/divider_clr"/>
    <LinearLayout
        android:id="@+id/appsettings_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appsettings_imv"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_menu_settings"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/settings_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/chapter_clr"
                    android:text="App Settings" />




            </LinearLayout>
            <ImageView
                android:id="@+id/right_arrow333"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_arrow_right_24"
                android:scaleType="fitCenter"
                app:tint="@color/qury_clr" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:background="@color/divider_clr"/>
    <LinearLayout
        android:id="@+id/terms_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/trms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/terms_imv"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_menu_terms"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/terms_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/chapter_clr"
                    android:text="Terms" />




            </LinearLayout>
            <ImageView
                android:id="@+id/right_arrow2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_arrow_right_24"
                android:scaleType="fitCenter"
                app:tint="@color/qury_clr" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/divider_clr"/>
    <LinearLayout
        android:id="@+id/logout_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logout_imv"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_menu_logout"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/logout_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/chapter_clr"
                    android:text="Logout" />




            </LinearLayout>
            <ImageView
                android:id="@+id/right_arrow1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_arrow_right_24"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                app:tint="@color/qury_clr" />
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>